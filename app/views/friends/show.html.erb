<p>
  <strong>First name:</strong>
  <%= @friend.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @friend.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @friend.email %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @friend.phone %>
</p>

<p>
  <strong>Twitter:</strong>
  <%= @friend.twitter %>
</p>
<p>
  <strong>Image:</strong>
  <%= image_tag(@friend.image) %>
</p>
<% if can? :update, @friend %>
<%= link_to 'Edit', edit_friend_path(@friend), class: "btn btn-primary" %> 
<% end %>
<%= link_to 'Back', friends_path, class: "btn btn-primary" %>